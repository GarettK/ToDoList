<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= headerTitle %> </h1>
  </div>

  <div class="box">

    <% newItems.forEach(item => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="deleteItemId" value="<%=item._id%>" onchange="this.form.submit()">
          <input type="hidden" name="list" value="<%=headerTitle%>"></input>
          <p> <%= item.name %> </p>
        </div>
      </form>
    <% }); %>


    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value="<%=headerTitle%>">+</button>
    </form>
  </div>

<%- include("footer") -%>
